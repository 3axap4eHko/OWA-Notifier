{
    "author": "3axap4eHko",
    "version": "2.0.0.7",
    "manifest_version": 2,
    "name": "Outlook Web Access notifier",
    "short_name": "OWA notifier",
    "description": "Outlook Web Access notifier Chrome Extension.",
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "256": "images/icon256.png",
        "128": "images/icon128.png"
    },
    "web_accessible_resources": [
        "images/icon128.png"
    ],
    "permissions": [
        "tts",
        "idle",
        "notifications",
        "webNavigation",
        "<all_urls>",
        "tabs",
        "background"
    ],
    "options_page": "settings.html",
    "background": {
        "page": "background.html"
    }
}