<t:ItemChange>
    <t:ItemId Id="{id}" ChangeKey="{changeKey}"/>
    <t:Updates>
        <t:SetItemField>
            <t:FieldURI FieldURI="message:IsRead"/>
            <t:Message>
                <t:IsRead>{read}</t:IsRead>
            </t:Message>
        </t:SetItemField>
    </t:Updates>
</t:ItemChange>
